  <script>

    let buttons = function (data, type, row, meta) {
      return  '<a href="{{ route('[% index_route_name %]') }}/'+ data +'" type="button" class="btn waves-effect waves-light btn-outline-secondary mr-2">Info</a>' +
              '<a href="{{ route('[% index_route_name %]') }}/'+ data +'/edit" type="button" class="btn waves-effect waves-light btn-outline-success mr-4">Editar</a>' +
              '<a href="{{ route('[% index_route_name %]') }}/'+ data +'" type="button" class="delete-btn btn waves-effect waves-light btn-outline-danger">Borrar</a>';
    };

    let activo = function (data, type, row, meta) {
      if (data === 1){
        return '<button data-row-id="'+ row.id +'" type="button" class="btn-switch btn btn-success btn-circle"><i class="fa fa-check"></i></button>';
      } else {
        return '<button data-row-id="'+ row.id +'" type="button" class="btn-switch btn btn-danger btn-circle"><i class="fa fa-times"></i> </button>';
      }
    };

    let ajax = {
      url: '{{ route('[% index_route_name %]') }}list',
      type: 'post',
      data : { '_token' : '{{ csrf_token() }}'}
    };

    $(document).ready(function () {
      let table  = $('#[% model_name_singular_variable %]_table').DataTable({
        // dom: 'Bfrtip',
        // buttons: [
        //   'csv', 'excel', 'pdf'
        // ],
        searchDelay: 750,
        processing: false,
        serverSide: true,
        order: [[ 0, 'desc' ]],
        language: { url: '{{ asset('js/spanish.json') }}'},
        ajax: ajax,
        columns: [
          {data: 'id', name: 'id'},
          {data: 'activo', name: 'activo', render: activo},
          {data: 'id', name: 'actions', render: buttons, orderable: false, searchable: false, width: "260px"}
        ]
      });
      $(document).on('click','.btn-switch',function () {
        let rowId = $(this).data('row-id');
        let xhr = $.post('{{ route('[% index_route_name %]') }}toggle' + rowId ,{_token: '{{ csrf_token() }}'});
        xhr.done(function () {
          table.ajax.reload();
        });
      });
    });

  </script>
